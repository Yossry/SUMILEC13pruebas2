      <record id="view_move_account_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@id='header_right_group']" position="after">
                    <group>
                        <!--<field name="document_type" attrs="{'readonly':[('state','not in',['draft'])],'required':[('type', '=', 'out_invoice')], 'invisible':[('type', '!=', 'out_invoice')]}" />-->
                        <field name="payment_method_id" attrs="{'readonly':[('state','not in',['draft'])],'required':[('type', '=', 'out_invoice')], 'invisible':[('type', '!=', 'out_invoice')]}" />
                        <field name="payment_mean_id" attrs="{'readonly':[('state','not in',['draft'])],'required':[('type', '=', 'out_invoice')], 'invisible':[('type', '!=', 'out_invoice')]}" />
                        <field name="description_code_credit" attrs="{'invisible': [('type', '!=', 'out_refund')], 'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="description_code_debit" attrs="{'required': [('debit_note', '=', True)], 'invisible': [('debit_note', '!=', True)]}"/>
                    </group>
                    <group>
                        <field name="debit_note" invisible="True"/>
                        <field name="url_pdf" widget="url" readonly="True" attrs="{'invisible':['|',('invoice_status_dian','!=','Exitoso'), ('type', '!=', 'out_invoice')]}"/>
                        <field name="url_xml" widget="url" readonly="True" attrs="{'invisible':['|', ('invoice_status_dian', '!=', 'Exitoso'), ('type', '!=', 'out_invoice')]}"/>
                        <field name="invoice_status_dian" invisible="False" widget="label_selection" readonly="True"  options="{'classes': {['Fallida']: 'danger', ['Exitoso']: 'success'}}" attrs="{'invisible':[('type', '!=', 'out_invoice')]}"/>
                        <field name="description_status_dian" attrs="{'invisible':['|',('invoice_status_dian', '!=', 'Fallida'), ('type', '!=', 'out_invoice')]}" readonly="True"/>
                    </group>
                </xpath>
                 <page name="other_info" position="after">
                    <page string="Archivos Adjuntos">
                        <group>
                            <group>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </group>
                    </page>
                </page>
            </field>
        </record>

